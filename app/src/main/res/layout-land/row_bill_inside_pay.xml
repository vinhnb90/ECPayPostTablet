<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTextWhite"
    android:padding="@dimen/_3sdp"
    android:weightSum="2">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_row_bill_inside_pay"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_12sdp"
            android:checked="false" />

        <TextView
            android:id="@+id/tv_row_bill_inside_pay_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:text="03/2017"
            android:textSize="@dimen/_7sdp" />

        <TextView
            android:id="@+id/tv_row_bill_inside_pay_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:lines="1"
            android:scrollHorizontally="true"
            android:text="2500000"
            android:textSize="@dimen/_7sdp" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/ll_row_bill_inside_pay_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btn_row_bill_inside_pay_delete"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/ic_delete" />

            <ImageButton
                android:id="@+id/btn_row_bill_inside_pay_print"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:background="@drawable/ic_print" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_row_bill_inside_pay_trang_thai"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_toLeftOf="@+id/ll_row_bill_inside_pay_status"
            android:gravity="center_horizontal|center_vertical"
            android:text="Đã thanh toán"
            android:textColor="@color/colorTextGreen"
            android:textSize="@dimen/_7sdp" />
    </RelativeLayout>
</LinearLayout>