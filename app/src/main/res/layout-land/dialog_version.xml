<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/_10sdp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_15sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/logoecpay" />

        <TextView
            android:id="@+id/tvText1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_15sdp"
            android:layout_below="@+id/ivLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_3sdp"
            android:gravity="center_horizontal|center_vertical"
            android:text="PHIÊN BẢN PHẦN MỀM"
            android:textAllCaps="true"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_dialog_version_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_dialog_version_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:text="OK"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/ll_dialog_version_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvText1"
                android:orientation="horizontal"
                android:padding="@dimen/_2sdp"
                android:scrollbars="vertical">

                <ImageButton
                    android:id="@+id/btn_dialog_version_content_update"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/ic_question_24" />

                <TextView
                    android:id="@+id/tv_dialog_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_toLeftOf="@+id/btn_dialog_version_content_update"
                    android:gravity="center_horizontal"
                    android:maxLines="30"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp"
                    android:scrollbars="vertical"
                    android:text="Version 1.0"
                    android:textSize="@dimen/_8sdp" />
            </RelativeLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/tv_dialog_version_detail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_9sdp" />

        <Button
            android:id="@+id/btn_dialog_version_button_ok"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_weight="1"
            android:background="@drawable/bg_button"
            android:orientation="horizontal"
            android:text="Đồng ý"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/_8sdp" />


    </LinearLayout>

    <ImageButton
        android:id="@+id/ibtn_dialog_version_close"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@mipmap/ic_close_blue" />
</RelativeLayout>