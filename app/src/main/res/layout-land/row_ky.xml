<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/cbKy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:text="03/2017"
        android:textSize="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_5sdp"/>

    <TextView
        android:id="@+id/tv_fragment_thanh_toan_total_bills_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/cbKy"
        android:layout_marginLeft="@dimen/_8sdp"
        android:textSize="@dimen/_10sdp"
        android:text="100.000 đ"/>

    <TextView
        android:id="@+id/tvTinhTrangThanhToan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_fragment_thanh_toan_total_bills_money"
        android:layout_marginLeft="@dimen/_8sdp"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/colorTextGreen"
        android:text="Đã thanh toán"/>

    <ImageButton
        android:id="@+id/ibClose"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="@dimen/_12sdp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_close_red"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/ibPrinter"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="@dimen/_12sdp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ibClose"
        android:src="@mipmap/ic_printer2"
        android:background="@null"/>

</RelativeLayout>