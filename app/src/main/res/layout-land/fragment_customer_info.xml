<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGray"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/fragment_customer_info_hHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue">

        <ImageButton
            android:id="@+id/fragment_customer_info_fragment_customer_info_btnBack1"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_23sdp"
            android:layout_margin="3dp"
            android:background="@null"
            android:src="@mipmap/ic_back" />

        <TextView
            android:id="@+id/fragment_customer_info_fragment_customer_info_tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_3sdp"
            android:text="ĐỊNH DANH THẺ"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/_12sdp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragment_customer_info_hHeader"
        android:layout_alignParentBottom="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_centerHorizontal="false"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fragment_customer_info_fragment_customer_info_textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:textSize="@dimen/_8sdp"
                        android:text="Số Thẻ" />

                    <RelativeLayout
                        android:id="@+id/fragment_customer_info_fragment_customer_info_rvSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fragment_customer_info_fragment_customer_info_tvTitle"
                        android:layout_weight="1">

                        <ImageButton
                            android:id="@+id/fragment_customer_info_fragment_customer_info_btnScanCode"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/bg_edittext"
                            android:src="@mipmap/ic_barcode" />

                        <EditText
                            android:id="@+id/fragment_customer_info_fragment_customer_info_eSearchCustomer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_toLeftOf="@+id/fragment_customer_info_fragment_customer_info_btnScanCode"
                            android:layout_toStartOf="@+id/fragment_customer_info_fragment_customer_info_btnScanCode"
                            android:background="@drawable/bg_edittext"
                            android:imeOptions="actionSearch"
                            android:inputType="textNoSuggestions|textVisiblePassword"
                            android:lines="1"
                            android:paddingBottom="@dimen/_3sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_30sdp"
                            android:textSize="@dimen/_8sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:scrollHorizontally="true"
                            android:text="" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/fragment_customer_info_fragment_customer_info_textView23"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="2"
                        android:textSize="@dimen/_8sdp"
                        android:text="Mã Khách Hàng" />

                    <TextView
                        android:id="@+id/fragment_customer_info_fragment_customer_info_txtMaKH"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:text="Ma kH"
                        android:textColor="@color/colorLightBlue"
                        android:textSize="@dimen/_8sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/_3sdp"
                    android:paddingTop="@dimen/_3sdp">

                    <TextView
                        android:id="@+id/fragment_customer_info_fragment_customer_info_textView31"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="2"
                        android:textSize="@dimen/_8sdp"
                        android:text="Tên Khách Hàng" />

                    <TextView
                        android:id="@+id/fragment_customer_info_txtTenKH"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:text="Ten kH"
                        android:textSize="@dimen/_8sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/_3sdp"
                    android:paddingTop="@dimen/_3sdp">

                    <TextView
                        android:id="@+id/fragment_customer_info_textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="2"
                        android:textSize="@dimen/_8sdp"
                        android:text="Địa Chỉ" />

                    <TextView
                        android:id="@+id/fragment_customer_info_txtDiaChi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:text="Dia Chi"
                        android:textSize="@dimen/_8sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/_3sdp"
                    android:paddingTop="@dimen/_3sdp">

                    <TextView
                        android:id="@+id/fragment_customer_info_textView223"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="2"
                        android:textSize="@dimen/_8sdp"
                        android:text="Số Điện Thoại EVN" />

                    <TextView
                        android:id="@+id/fragment_customer_info_txtPhoneEvn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:text="Dia Chi"
                        android:textSize="@dimen/_8sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fragment_customer_info_textView311"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="2"
                        android:textSize="@dimen/_8sdp"
                        android:text="Số Điện Thoại ECPAY" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/fragment_customer_info_eSdtECPAY"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/bg_edittext"
                            android:imeOptions="actionSearch"
                            android:inputType="textNoSuggestions|textVisiblePassword"
                            android:lines="1"
                            android:paddingBottom="@dimen/_3sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_30sdp"
                            android:textSize="@dimen/_8sdp"
                            android:scrollHorizontally="true"
                            android:text="" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fragment_customer_info_textView1113"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="2"
                        android:textSize="@dimen/_8sdp"
                        android:text="Số TK Ngân Hàng" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fragment_customer_info_tvTitle"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/fragment_customer_info_eTKNganHang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/bg_edittext"
                            android:imeOptions="actionSearch"
                            android:inputType="textNoSuggestions|textVisiblePassword"
                            android:lines="1"
                            android:paddingBottom="@dimen/_3sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_30sdp"
                            android:textSize="@dimen/_8sdp"
                            android:scrollHorizontally="true"
                            android:text="" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fragment_customer_info_textView3444"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="2"
                        android:textSize="@dimen/_8sdp"
                        android:text="Số Giấy Tờ" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fragment_customer_info_tvTitle"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/fragment_customer_info_eBookCmis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:imeOptions="actionSearch"
                            android:inputType="textNoSuggestions|textVisiblePassword"
                            android:lines="1"
                            android:paddingBottom="@dimen/_3sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_30sdp"
                            android:textSize="@dimen/_8sdp"
                            android:scrollHorizontally="true"
                            android:text="" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fragment_customer_info_textView3121"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="2"
                        android:textSize="@dimen/_8sdp"
                        android:text="Tại Ngân Hàng" />

                    <RelativeLayout
                        android:id="@+id/fragment_customer_info_rvSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fragment_customer_info_tvTitle"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/fragment_customer_info_eAddressNH"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/bg_edittext"
                            android:imeOptions="actionSearch"
                            android:inputType="textNoSuggestions|textVisiblePassword"
                            android:lines="1"
                            android:paddingBottom="@dimen/_3sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_30sdp"
                            android:textSize="@dimen/_8sdp"
                            android:scrollHorizontally="true"
                            android:text="" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment_customer_info_imageButton2"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:background="@android:color/transparent"
                        android:orientation="horizontal"/>

                    <Button
                        android:id="@+id/fragment_customer_info_btnThoat"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:textSize="@dimen/_8sdp"
                        android:background="@drawable/bg_button_white"
                        android:text="Thoát" />

                    <Button
                        android:id="@+id/fragment_customer_info_btnDangKy"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:textSize="@dimen/_8sdp"
                        android:background="@drawable/bg_button_white"
                        android:text="Đăng Ký" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:background="@android:color/transparent"
                        android:orientation="horizontal"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLightGray"
        android:clickable="true"
        android:focusable="true">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

</RelativeLayout>