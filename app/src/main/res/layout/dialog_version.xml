<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_2sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:src="@drawable/logoecpay" />

        <TextView
            android:id="@+id/tvText1"
            android:layout_width="wrap_content"
            android:layout_below="@+id/ivLogo"
            android:layout_centerHorizontal="true"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center_horizontal|center_vertical"
            android:text="PHIÊN BẢN PHẦN MỀM"
            android:textAllCaps="true"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_dialog_version_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_dialog_version_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:text="OK"
            android:weightSum="3">

            <!--<Button
                android:id="@+id/btn_dialog_version_button_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:orientation="horizontal"
                android:text="HỦY"
                android:textColor="@color/colorTextWhite">

            </Button>-->

            <Button
                android:id="@+id/btn_dialog_version_button_ok"
                android:layout_width="0dp"
                android:layout_height="@dimen/_24sdp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:orientation="horizontal"
                android:textSize="@dimen/_10sdp"
                android:text="Đồng ý"
                android:textColor="@color/colorTextWhite" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_dialog_version_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvText1"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_2sdp"
            android:scrollbars="vertical">

            <ImageButton
                android:layout_marginRight="@dimen/_15sdp"
                android:id="@+id/btn_dialog_version_content_update"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_question_24"/>

            <TextView
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:id="@+id/tv_dialog_version_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center_horizontal"
                android:maxLines="30"
                android:orientation="horizontal"
                android:padding="@dimen/_2sdp"
                android:scrollbars="vertical"
                android:text="Version 1.0"
                android:textSize="@dimen/_10sdp"/>
        </RelativeLayout>
    </RelativeLayout>
    <ImageButton
        android:id="@+id/ibtn_dialog_version_close"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@mipmap/ic_close_blue"/>
</RelativeLayout>