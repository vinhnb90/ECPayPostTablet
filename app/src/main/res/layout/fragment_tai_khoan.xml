<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:adjustViewBounds="true"
            android:background="@drawable/bg_taikhoan" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/ibBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@null"
        android:src="@mipmap/ic_back" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:text="THÔNG TIN TÀI KHOẢN"
        android:textColor="@color/colorTextWhite"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="80dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:padding="20dp">

            <ImageView
                android:id="@+id/iv_frag_main_avatar"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:padding="10dp"
                android:src="@drawable/avatar" />

            <LinearLayout
                android:id="@+id/llText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_frag_main_avatar"
                android:layout_alignTop="@+id/iv_frag_main_avatar"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/iv_frag_main_avatar"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTaiKhoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:scrollbars="vertical"
                    android:text="Chủ tài khoản: "
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNgayDangKy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Ngày đăng ký: 10/03/2017"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvTitleTenTaiKhoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/llText"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Tên tài khoản:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvTenTaiKhoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/llText"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tvTitleTenTaiKhoan"
                android:gravity="right"
                android:maxLines="4"
                android:scrollbars="vertical"
                android:text="Username"
                android:textSize="16sp" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvTenTaiKhoan"
                android:layout_marginTop="10dp"
                android:background="@color/colorLightGray" />

            <TextView
                android:id="@+id/tvTitleCMND"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/view1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="CMND:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvCMND"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/view1"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tvTitleCMND"
                android:gravity="right"
                android:maxLines="4"
                android:scrollbars="vertical"
                android:text="031731743"
                android:textSize="16sp" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvCMND"
                android:layout_marginTop="10dp"
                android:background="@color/colorLightGray" />

            <TextView
                android:id="@+id/tvTitleDienThoai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/view2"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Điện thoại:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDienThoai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/view2"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tvTitleDienThoai"
                android:gravity="right"
                android:maxLines="4"
                android:scrollbars="vertical"
                android:text="01656248372"
                android:textSize="16sp" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvDienThoai"
                android:layout_marginTop="10dp"
                android:background="@color/colorLightGray" />

            <TextView
                android:id="@+id/tvTitleEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/view3"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Email:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/view3"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tvTitleEmail"
                android:gravity="right"
                android:maxLines="4"
                android:scrollbars="vertical"
                android:text="email@gmail.com"
                android:textSize="16sp" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvEmail"
                android:layout_marginTop="10dp"
                android:background="@color/colorLightGray" />

            <TextView
                android:id="@+id/tvTitleDiaChi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/view4"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Địa chỉ:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDiaChi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/view4"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tvTitleDiaChi"
                android:gravity="right"
                android:maxLines="4"
                android:scrollbars="vertical"
                android:text="25 Vũ Phạm Hàm, Yên Hoà, Cầu Giấy, Hà NộiCầu Giấy, Hà NộiCầu Giấy, Hà NộiCầu Giấy, Hà NộiCầu Giấy, Hà NộiCầu Giấy, Hà NộiCầu Giấy, Hà NộiCầu Giấy, Hà NộiCầu Giấy, Hà NộiCầu Giấy, Hà NộiCầu Giấy, Hà NộiCầu Giấy, Hà NộiCầu Giấy, Hà NộiCầu Giấy, Hà NộiCầu Giấy, Hà NộiCầu Giấy, Hà NộiCầu Giấy, Hà NộiCầu Giấy, Hà NộiCầu Giấy, Hà NộiCầu Giấy, Hà NộiCầu Giấy, Hà NộiCầu Giấy, Hà NộiCầu Giấy, Hà NộiCầu Giấy, Hà NộiCầu Giấy, Hà NộiCầu Giấy, Hà NộiCầu Giấy, Hà Nội"
                android:textSize="16sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlMain"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:visibility="visible">


            <LinearLayout
                android:id="@+id/llInfo1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="SỐ TÀI KHOẢN"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSoTaiKhoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:maxLines="4"
                    android:scrollbars="vertical"
                    android:text="2345"

                    android:textColor="@color/colorRed"
                    android:textSize="25sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorDisable"></View>

            <LinearLayout
                android:id="@+id/llInfo2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="SỐ DƯ KHẢ DỤNG"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSoDuKhaDung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:maxLines="4"
                    android:scrollbars="vertical"
                    android:text="2.000.0002.000.0002.000.0002.000.0002.000.0002.000.0002.000.0002.000.000"
                    android:textColor="@color/colorRed"
                    android:textSize="25sp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorDisable"></View>

            <LinearLayout
                android:id="@+id/llInfo3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="LOẠI TÀI KHOẢN"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvLoaiTaiKhoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:maxLines="4"
                    android:scrollbars="vertical"
                    android:text="12"
                    android:textColor="@color/colorRed"
                    android:textSize="25sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:padding="20dp"
                android:id="@+id/btDoiMatKhau"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_button_orange"
                android:text="Đổi mật khẩu"
                android:textColor="@color/colorTextWhite" />

            <Button
                android:layout_marginLeft="20dp"
                android:padding="20dp"
                android:id="@+id/btDangXuat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:text="Đăng xuất"
                android:textColor="@color/colorTextWhite" />

        </LinearLayout>
    </LinearLayout>


</FrameLayout>