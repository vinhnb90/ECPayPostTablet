<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/cbChon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ll2"
        android:layout_toRightOf="@+id/cbChon"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMaKH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:scrollHorizontally="true"
            android:text="PD384728938" />

        <TextView
            android:id="@+id/tvKy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:lines="1"
            android:scrollHorizontally="true"
            android:text="Kỳ 03/2017" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTenKH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Ten"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_fragment_thanh_toan_total_bills_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:lines="1"
            android:scrollHorizontally="true"
            android:text="100.000 đ" />

    </LinearLayout>


    <TextView
        android:id="@+id/tvTinhTrang"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"
        android:lines="1"
        android:scrollHorizontally="true"
        android:text="Chưa thanh toán"
        android:textColor="@color/colorDarkOrange" />



</LinearLayout>