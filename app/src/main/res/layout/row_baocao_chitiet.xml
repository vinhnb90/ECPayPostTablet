<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorRow"
    android:layout_margin="@dimen/_5sdp"
    android:padding="@dimen/_2sdp"
    >

    <LinearLayout
        android:id="@+id/ll_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitleKy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Kỳ"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/tvKy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="03/2017"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_toLeftOf="@id/ll_mid"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTenKH"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Tên khách hàng"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMaKH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTenKH"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="PD00111"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_toRightOf="@id/ll_mid"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNgay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="12/03/2017"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/tv_fragment_thanh_toan_total_bills_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="right"
            android:text="1.000.000 đ"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>


</RelativeLayout>