<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:weightSum="2">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="horizontal">

        <CheckBox
            android:checked="false"
            android:id="@+id/cb_row_bill_inside_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_row_bill_inside_pay_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="03/2017" />

        <TextView
            android:id="@+id/tv_row_bill_inside_pay_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:lines="1"
            android:scrollHorizontally="true"
            android:text="2500000" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btn_row_bill_inside_pay_delete"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:elevation="5dp"
            app:srcCompat="@drawable/ic_delete" />

        <ImageButton
            android:id="@+id/btn_row_bill_inside_pay_print"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/btn_row_bill_inside_pay_delete"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/btn_row_bill_inside_pay_delete"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_print" />


        <TextView
            android:id="@+id/tv_row_bill_inside_pay_trang_thai"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/btn_row_bill_inside_pay_delete"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/btn_row_bill_inside_pay_print"
            android:gravity="center_horizontal|center_vertical"
            android:text="Đã thanh toán"
            android:textColor="@color/colorTextGreen" />


    </RelativeLayout>


</LinearLayout>